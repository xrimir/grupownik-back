enum Role {
  USER
  ADMIN
}

enum Gender {
  MALE
  FEMALE
  OTHER
}

enum AgeRange {
  UNDER_18
  AGE_18_25
  AGE_26_35
  AGE_36_45
  AGE_46_60
  OVER_60
}
